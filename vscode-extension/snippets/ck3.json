    },
    "Add Prestige": {
        "prefix": "addprestige",
        "body": "add_prestige = ${1:100}",
        "description": "Add prestige to a character"
    },
    "Add Piety": {
        "prefix": "addpiety",
        "body": "add_piety = ${1:100}",
        "description": "Add piety to a character"
    },
    "Has Trait": {

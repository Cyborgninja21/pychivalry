        "description": "Set a variable"
    },
    "Change Variable": {
        "prefix": "changevar",
        "body": [
            "change_variable = {",
            "\tname = ${1:variable_name}",
            "\tadd = ${2:1}",
            "}"
        ],
        "description": "Change a variable value"
    },
    "Add Trait": {
        "prefix": "addtrait",

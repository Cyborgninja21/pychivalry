{
  "name": "ck3-language-support",
  "displayName": "Crusader Kings 3 Language Support",
  "description": "Language support for Crusader Kings 3 scripting language",
  "version": "0.1.0",
  "publisher": "cyborgninja21",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "keywords": [
    "crusader kings 3",
    "ck3",
    "paradox",
    "modding"
  ],
  "activationEvents": [
    "onLanguage:ck3"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ck3",
        "aliases": [
          "Crusader Kings 3",
          "ck3"
        ],
        "extensions": [
          ".txt",
          ".gui",
          ".gfx",
          ".asset"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "CK3 Language Server",
      "properties": {
        "ck3LanguageServer.pythonPath": {
          "type": "string",
          "default": "python",
          "description": "Path to Python executable to use for the language server"
        },
        "ck3LanguageServer.trace.server": {
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}

{
  "name": "ck3-language-support",
  "displayName": "Crusader Kings 3 Language Support",
  "description": "Language support for Crusader Kings 3 scripting language with LSP-powered features",
  "version": "1.1.0",
  "publisher": "cyborgninja21",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/Cyborgninja21/pychivalry.git"
  },
  "bugs": {
    "url": "https://github.com/Cyborgninja21/pychivalry/issues"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "crusader kings 3",
    "ck3",
    "paradox",
    "modding",
    "language server"
  ],
  "activationEvents": [
    "onLanguage:ck3",
    "workspaceContains:**/*.{txt,gui,gfx,asset}"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "ck3",
        "aliases": [
          "Crusader Kings 3",
          "CK3"
        ],
        "extensions": [
          ".txt",
          ".gui",
          ".gfx",
          ".asset"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ck3",
        "scopeName": "source.ck3",
        "path": "./syntaxes/ck3.tmLanguage.json"
      }
    ],
    "snippets": [
      {
        "language": "ck3",
        "path": "./snippets/ck3.json"
      }
    ],
    "commands": [
      {
        "command": "ck3LanguageServer.restart",
        "title": "Restart Language Server",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.showOutput",
        "title": "Show Output Channel",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.showMenu",
        "title": "Show Menu",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.openDocumentation",
        "title": "Open CK3 Modding Documentation",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.validateWorkspace",
        "title": "Validate Workspace",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.rescanWorkspace",
        "title": "Rescan Workspace",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.getWorkspaceStats",
        "title": "Show Workspace Statistics",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.generateEventTemplate",
        "title": "Generate Event Template",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.findOrphanedLocalization",
        "title": "Find Orphaned Localization",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.checkDependencies",
        "title": "Check Dependencies",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.showNamespaceEvents",
        "title": "Show Namespace Events",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.generateLocalizationStubs",
        "title": "Generate Localization Stubs",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.renameEvent",
        "title": "Rename Event",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.startLogWatcher",
        "title": "Start Game Log Watcher",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.stopLogWatcher",
        "title": "Stop Game Log Watcher",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.pauseLogWatcher",
        "title": "Pause Game Log Watcher",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.resumeLogWatcher",
        "title": "Resume Game Log Watcher",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.clearGameLogs",
        "title": "Clear Game Log Diagnostics",
        "category": "CK3"
      },
      {
        "command": "ck3LanguageServer.showLogStatistics",
        "title": "Show Game Log Statistics",
        "category": "CK3"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "ck3LanguageServer.restart",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.showOutput",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.showMenu",
          "when": "false"
        },
        {
          "command": "ck3LanguageServer.openDocumentation",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.validateWorkspace",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.rescanWorkspace",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.getWorkspaceStats",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.generateEventTemplate",
          "when": "editorLangId == ck3"
        },
        {
          "command": "ck3LanguageServer.findOrphanedLocalization",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.checkDependencies",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.showNamespaceEvents",
          "when": "editorLangId == ck3"
        },
        {
          "command": "ck3LanguageServer.generateLocalizationStubs",
          "when": "editorLangId == ck3"
        },
        {
          "command": "ck3LanguageServer.renameEvent",
          "when": "editorLangId == ck3"
        },
        {
          "command": "ck3LanguageServer.startLogWatcher",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.stopLogWatcher",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.pauseLogWatcher",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.resumeLogWatcher",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.clearGameLogs",
          "when": "true"
        },
        {
          "command": "ck3LanguageServer.showLogStatistics",
          "when": "true"
        }
      ]
    },
    "configuration": [
      {
        "title": "General",
        "properties": {
          "ck3LanguageServer.pythonPath": {
            "type": "string",
            "default": "python",
            "description": "Path to Python executable to use for the language server",
            "scope": "resource"
          },
          "ck3LanguageServer.args": {
            "type": "array",
            "default": [],
            "description": "Additional arguments to pass to the language server",
            "items": {
              "type": "string"
            },
            "scope": "resource"
          },
          "ck3LanguageServer.trace.server": {
            "type": "string",
            "enum": [
              "off",
              "messages",
              "verbose"
            ],
            "default": "off",
            "description": "Traces the communication between VS Code and the language server",
            "scope": "window"
          },
          "ck3LanguageServer.logLevel": {
            "type": "string",
            "enum": [
              "debug",
              "info",
              "warning",
              "error"
            ],
            "default": "info",
            "description": "Log level for the language server. Setting to 'debug' enables additional Debug and Performance output channels.",
            "scope": "resource"
          },
          "ck3LanguageServer.enable": {
            "type": "boolean",
            "default": true,
            "description": "Enable/disable the CK3 language server",
            "scope": "resource"
          }
        }
      },
      {
        "title": "Formatting",
        "properties": {
          "ck3LanguageServer.formatting.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable document formatting for CK3 files",
            "scope": "resource"
          },
          "ck3LanguageServer.formatting.insertSpaces": {
            "type": "boolean",
            "default": false,
            "description": "Use spaces instead of tabs for indentation (Paradox convention uses tabs)",
            "scope": "resource"
          },
          "ck3LanguageServer.formatting.tabSize": {
            "type": "number",
            "default": 4,
            "description": "Number of spaces per tab (for display purposes)",
            "scope": "resource"
          }
        }
      },
      {
        "title": "Inlay Hints",
        "properties": {
          "ck3LanguageServer.inlayHints.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable inlay hints for CK3 scripts",
            "scope": "resource"
          },
          "ck3LanguageServer.inlayHints.showScopeTypes": {
            "type": "boolean",
            "default": true,
            "description": "Show type hints after saved scopes (e.g., scope:friend → : character)",
            "scope": "resource"
          },
          "ck3LanguageServer.inlayHints.showChainTypes": {
            "type": "boolean",
            "default": true,
            "description": "Show type hints after scope chains (e.g., root.primary_title → : landed_title)",
            "scope": "resource"
          },
          "ck3LanguageServer.inlayHints.showIteratorTypes": {
            "type": "boolean",
            "default": true,
            "description": "Show type hints for list iterators (e.g., every_vassal → → character)",
            "scope": "resource"
          },
          "ck3LanguageServer.inlayHints.maxHintsPerLine": {
            "type": "number",
            "default": 3,
            "minimum": 1,
            "maximum": 10,
            "description": "Maximum number of inlay hints to show per line",
            "scope": "resource"
          }
        }
      },
      {
        "title": "Game Log Watcher",
        "properties": {
          "ck3LanguageServer.logWatcher.enabled": {
            "type": "boolean",
            "default": true,
            "description": "Enable the CK3 game log watcher for real-time error detection",
            "scope": "resource",
            "order": 1
          },
          "ck3LanguageServer.logWatcher.autoStart": {
            "type": "boolean",
            "default": false,
            "description": "Automatically start watching game logs when opening a CK3 workspace",
            "scope": "resource",
            "order": 2
          },
          "ck3LanguageServer.logWatcher.logPath": {
            "type": "string",
            "default": "",
            "description": "Custom path to CK3 logs directory (leave empty for auto-detection)",
            "scope": "resource",
            "order": 3
          },
          "ck3LanguageServer.logWatcher.showInOutput": {
            "type": "boolean",
            "default": true,
            "description": "Show game log entries in the GameLogs output channel",
            "scope": "resource",
            "order": 4
          },
          "ck3LanguageServer.logWatcher.maxLogSize": {
            "type": "number",
            "default": 100,
            "minimum": 10,
            "maximum": 1000,
            "description": "Maximum size of game.log to process in MB (older content will be skipped)",
            "scope": "resource",
            "order": 5
          },
          "ck3LanguageServer.logWatcher.debounceDelay": {
            "type": "number",
            "default": 500,
            "minimum": 100,
            "maximum": 5000,
            "description": "Delay in milliseconds before processing log changes (reduces CPU usage)",
            "scope": "resource",
            "order": 6
          },
          "ck3LanguageServer.logWatcher.patterns": {
            "type": "array",
            "default": [],
            "description": "Additional custom regex patterns for error detection",
            "items": {
              "type": "object",
              "properties": {
                "pattern": {
                  "type": "string",
                  "description": "Regular expression pattern to match"
                },
                "severity": {
                  "type": "string",
                  "enum": [
                    "error",
                    "warning",
                    "info"
                  ],
                  "description": "Severity level for matched patterns"
                },
                "message": {
                  "type": "string",
                  "description": "Custom message template (use {0}, {1} for capture groups)"
                }
              }
            },
            "scope": "resource",
            "order": 7
          }
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha ./out/test/unit/**/*.test.js",
    "lint": "eslint src --ext ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format-check": "prettier --check \"src/**/*.ts\""
  },
  "devDependencies": {
    "@types/mocha": "^10.0.0",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.75.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vscode/test-electron": "^2.3.0",
    "eslint": "^8.0.0",
    "glob": "^10.0.0",
    "mocha": "^10.0.0",
    "prettier": "^3.0.0",
    "ts-loader": "^9.4.0",
    "typescript": "^5.0.0",
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.0"
  }
}
